<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6DFB7"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/image_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bttn_change_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        app:srcCompat="@drawable/image_li" />

    <ImageButton
        android:id="@+id/bttn_change_username"
        android:layout_width="325dp"
        android:layout_height="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_li"
        app:layout_constraintBottom_toTopOf="@+id/bttn_change_password"
        app:srcCompat="@drawable/bttn_username"
        tools:layout_editor_absoluteY="325dp" />

    <ImageButton
        android:id="@+id/bttn_change_password"
        android:layout_width="325dp"
        android:layout_height="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bttn_password"
        app:layout_constraintTop_toBottomOf="@+id/bttn_change_username"
        app:layout_constraintBottom_toTopOf="@+id/bttn_login_two"
        tools:layout_editor_absoluteY="441dp" />

    <ImageButton
        android:id="@+id/bttn_login_two"
        android:layout_width="325dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn_change_password"
        app:srcCompat="@drawable/bttn_login_two" />
</androidx.constraintlayout.widget.ConstraintLayout>