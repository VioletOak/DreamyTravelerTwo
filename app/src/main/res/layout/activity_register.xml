<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#B6DFB7"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

  <ImageButton
      android:id="@+id/bttn_change_username"
      android:layout_width="325dp"
      android:layout_height="81dp"
      android:src="@drawable/bttn_username"
      app:layout_constraintBottom_toTopOf="@+id/bttn_change_email"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/image_si" />

  <ImageButton
      android:id="@+id/bttn_change_email"
      android:layout_width="325dp"
      android:layout_height="81dp"
      android:src="@drawable/bttn_email"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/bttn_change_password"
      app:layout_constraintTop_toBottomOf="@+id/bttn_change_username"
      tools:layout_editor_absoluteY="432dp" />

  <ImageButton
      android:id="@+id/bttn_change_password"
      android:layout_width="325dp"
      android:layout_height="81dp"
      android:src="@drawable/bttn_password"
      app:layout_constraintBottom_toTopOf="@+id/bttn_register_two"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bttn_change_email" />

  <ImageButton
      android:id="@+id/bttn_register_two"
      android:layout_width="325dp"
      android:layout_height="81dp"
      android:src="@drawable/bttn_register_two"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bttn_change_password" />

  <ImageView
      android:id="@+id/image_si"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/bttn_change_username"
      app:srcCompat="@drawable/image_si" />
</androidx.constraintlayout.widget.ConstraintLayout>